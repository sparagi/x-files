test generation
generateHostParsingTests
	"Generate tests that parse URIs with various hosts."
	"self generateHostParsingTests"
	| testSpecifications |

	testSpecifications := {
		"URI"				"Exception"	"Subclass of URIHostIdentifier"	"Octets"			"Comment"
		{'http://127.0.0.1/'.	nil.			'URIIPv4Address'	.				'#(127 0 0 1)'.	'Normal IPv4 address'}}.

	1 to: testSpecifications size do: [:testNumber | | testSpecification testMethod |
		testSpecification := testSpecifications at: testNumber.
		testMethod := String streamContents: [:stream |stream
			nextPutAll: 'testHostParse'; nextPutAll: testNumber asString; cr;
			nextPutAll: '	"', (testSpecification at: 5), '"'; cr;
			nextPutAll: '	"Automatically generated by class>>generateHostParsingTests; do not edit here."'; cr;		
			nextPutAll: '	| uriString uriObject |'; cr;
			cr;
			nextPutAll: '	uriString := '''; nextPutAll: (testSpecification at: 1); nextPutAll: '''.'; cr;
			nextPutAll: '	uriObject := URI fromString: uriString.'; cr;
			cr;
			nextPutAll: '	self should: [uriObject asString = uriString]'; cr]. 
		self compile: testMethod classified: 'host']